<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.SignIn">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <View
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_handle"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sacramento"
                android:text="@string/welcome"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="#000"
                android:text="@string/sign_in_to_your_account_and_you_can_ship_all_your_couriers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"
                android:textColor="#000"
                android:text="@string/enter_your_pin_to_login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/changepin_edittext_back"
                    android:hint="@string/john_smith_gmail_com"
                    android:padding="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans"
                    android:lineSpacingExtra="5.3sp"
                    />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_edittext"
                    android:gravity="center_vertical"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_0"
                        android:padding="25dp"
                        android:textSize="20sp"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/nunito_sans"/>


                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="#d8d8d8"
                        android:layout_marginHorizontal="15dp"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#fff"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/nunito_sans"
                        android:hint="@string/_0"
                        android:padding="25dp"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="#d8d8d8"
                        android:layout_marginHorizontal="15dp"/>

                    <Space
                        android:layout_width="2dp"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#fff"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_0"
                        android:padding="25dp"
                        android:textSize="20sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/nunito_sans"/>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="40dp"
                        android:background="#d8d8d8"
                        android:layout_marginHorizontal="15dp"/>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="#fff"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/_0"
                        android:padding="25dp"
                        android:textSize="20sp"
                        android:layout_marginEnd="5dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/nunito_sans"/>



                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_filled_back"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:elevation="3dp"
                android:padding="18dp"
                android:id="@+id/login">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    android:textColor="#fff"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:fontFamily="@font/nunito_sans"
                    android:textSize="20sp"
                    android:drawablePadding="7dp"/>

            </RelativeLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>