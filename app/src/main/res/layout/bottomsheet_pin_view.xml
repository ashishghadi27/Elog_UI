<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_nav_back"
    tools:context=".fragments.SignIn">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <View
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/top_handle"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sacramento"
                android:text="@string/welcome"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="35sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="#000"
                android:text="@string/sign_in_to_your_account_and_you_can_ship_all_your_couriers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="20dp"
                android:textColor="#000"
                android:text="@string/enter_your_pin_to_login" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/changepin_edittext_back"
                    android:hint="@string/john_smith_gmail_com"
                    android:padding="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/nunito_sans"
                    android:lineSpacingExtra="5.3sp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_edittext"
                    android:hint="@string/password"
                    android:padding="20dp"
                    android:textSize="15sp"
                    android:layout_marginTop="-2dp"
                    android:fontFamily="@font/nunito_sans"
                    android:drawableEnd="@drawable/ic_lock_icon"
                    android:lineSpacingExtra="5.3sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/forgot_password" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_filled_back"
                android:layout_margin="20dp"
                android:elevation="3dp"
                android:padding="18dp"
                android:id="@+id/login">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    android:textColor="#fff"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:fontFamily="@font/nunito_sans"
                    android:textSize="20sp"
                    android:drawablePadding="7dp"/>

            </RelativeLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>