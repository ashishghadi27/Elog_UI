<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_menu_ham"
            android:layout_centerVertical="true"
            android:id="@+id/menu"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/menu"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/e"
                android:textSize="25sp"
                android:layout_centerVertical="true"
                android:id="@+id/e"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:fontFamily="@font/circular_std_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/e"
                android:text="@string/log1"
                android:layout_centerVertical="true"
                android:textSize="25sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="@font/circular_std_bold"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_plus"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_curve_back"
        android:orientation="vertical">

        <include android:visibility="gone" layout="@layout/home_card"/>

        <include layout="@layout/empty_home"/>

    </LinearLayout>

</LinearLayout>
